{% extends 'base.html.twig' %}


{% block body %}
    <h1 class="text-center mt-5 mb-3">Modification du profil : </h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="form-group col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 text-center">
                {{ form_start(formAdminEdit) }}
                <div class="my-custom-class-for-errors alert-danger">
                    {{ form_errors(formAdminEdit) }}
                    <span class="text-danger">{{ form_errors(formAdminEdit.usernames) }}</span>
                    <span class="text-danger">{{ form_errors(formAdminEdit.passwordsecu) }}</span>
                    <span class="text-danger">{{ form_errors(formAdminEdit.imageprofil) }}</span>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        {{ form_row(formAdminEdit.usernames) }}
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        {{ form_row(formAdminEdit.passwordsecu) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        {{ form_row(formAdminEdit.imageprofil) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 justify-content-center">
                        {{ form_row(formAdminEdit.save) }}
                        {{ form_end(formAdminEdit) }}
                        <a class="btn btn-secondary mt-2" href="{{ path('user_index') }}">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
