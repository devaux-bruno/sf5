{% extends 'base.html.twig' %}


{% block body %}
    <h1 class="text-center mt-5 mb-3">Modification du domaine : </h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="form-group col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 text-center">
                {{ form_start(formDomaineEdit) }}
                <div class="my-custom-class-for-errors alert-danger">
                    {{ form_errors(formDomaineEdit) }}
                    <span class="text-danger">{{ form_errors(formDomaineEdit.domaine) }}</span>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 justify-content-center">
                        {{ form_row(formDomaineEdit.domaine) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 justify-content-center">
                        {{ form_row(formDomaineEdit.save) }}
                        {{ form_end(formDomaineEdit) }}
                        <a class="btn btn-secondary mt-2" href="{{ path('domaine_index') }}">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}